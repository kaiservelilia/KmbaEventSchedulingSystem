<div class="container-fluid">
  <br>
  <div class="card">
    <div class="card-header">
      <h1>Event List</h1>
      <%= link_to 'New Event', new_event_path, class: 'btn btn-primary' %>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <th>Name</th>
            <th>Date</th>
            <th>Description</th>
            <th>Action</th>
          </thead>
          <% @events.each do |event| %>
            <tr>
              <td><%= event.name %></td>
              <td><%= event.date.strftime('%B %d, %Y %I:%M %p') %></td>
              <td><%= event.description %></td>
              <td>
                <%= link_to 'Show', event, class: 'btn btn-secondary' %>
                <%= link_to 'Edit', edit_event_path(event), class: 'btn btn-primary' %>
                <%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-danger'%>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  <div>
