  <div class="row">
    <div class="col-2">
    </div>
    <div class="col-8">
	    <div class="card col-12 d-flex justify-content-center">
	        <div class="card-header">
	          <h1 class="card-title">Room Information</h1>
	        </div>
	        <div class="row">
	          <div class="card-body">
	            <p class="card-text">
	              Room Name :  <strong><%= @venue.name %></strong> 
	            </p>
	          </div>
	          <div class="card-body">
	            <p class="card-text">
	              Room Information :  <strong><%= @venue.address %></strong> 
	            </p>
	          </div>
	        </div>
	    </div>
    <br>
    	<%= link_to 'Update', edit_venue_path(@venue), class: 'btn btn-primary' %>
	    <%= link_to "Back", venues_path, class: "btn btn-secondary"%> 
	  <br>
	  <br>
	    <%= button_to 'Delete', venue_path(@venue), method: :delete, class: 'btn btn-danger', onclick: "return confirm('Are you sure?');" %>
    </div>
    <div class="col-2">
    </div>
  </div>
</div>

