<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <% if @action == "new" %>
            <h1>New Room</h1>
            <p>Add new Room.</p>
          <% elsif @action == "edit" %>
            <h1>Edit Room Details</h1>
            <p>Update the Room details.</p>
          <% end %>
        </div>
        <%= form_with(model: @venue) do |f| %>
          <div class="card-body">
            <div class="form-group">
              <div class="row">
                <div class="col-md-4"> 
                  <label>Room Name</label>
                  <%= f.text_field :name %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-4">
                  <label>Room Description/Address</label>
                  <%= f.text_area :address %>
                </div>
              </div>
            </div>
          </div>
          <div class="card-footer">
            <div class="d-flex justify-content-end">
              <%= f.submit "Save", class: 'btn btn-primary' %>
              <%= link_to "Back", venues_path, class: "btn btn-danger"%>  
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

