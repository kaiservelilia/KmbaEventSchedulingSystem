<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h1 class="card-title">Events Informations</h1>
      </div>
      <div class="card-header">
        <%= link_to 'New Event', new_event_path, class: 'btn btn-primary' %>
      </div>   
        
    </div>
      <div class="card-body table-responsive p-0">
        <table class="table table-hover text-nowrap">
          <thead>
            <tr>
              <th>Event Name</th>
              <th>Date</th>
              <th>Description</th>
              <th>Room Occupied</th>
              <th>Action</th>
            </tr>
          </thead>
          <% @events.each do |event| %>
            <tr>
              <td><%= event.name %></td>
              <td><%= event.date.strftime('%B %d, %Y') %></td>
              <td><%= event.description %></td>
              <td><%= event.venue_name %></td>
              <td><%= link_to 'Show', event, class: 'btn btn-secondary' %></td>
            </tr>
          <% end %>
        </table>
      </div>
   </div>
</div>