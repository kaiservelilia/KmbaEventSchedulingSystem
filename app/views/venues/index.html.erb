<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h1 class="card-title">Rooms Informations</h1>
      </div>
      <div class="card-header">
        <%= link_to 'New Room', new_venue_path, class: 'btn btn-primary' %>
      </div>   
        
    </div>
      <div class="card-body table-responsive p-0">
        <table class="table table-hover text-nowrap">
          <thead>
            <tr>
              <th>Room Name</th>
              <th>Address</th>
              <th>Action</th>
            </tr>
          </thead>
          <% @venues.each do |venue| %>
            <tr>
              <td><%= venue.name %></td>
              <td><%= venue.address %></td>
              <td><%= link_to 'Show', venue, class: 'btn btn-secondary' %></td>
            </tr>
          <% end %>
        </table>
      </div>
   </div>
</div>